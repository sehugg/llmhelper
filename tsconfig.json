{
    "compilerOptions": {
        "lib": [
            "es2023"
        ],
        "outDir": "./dist",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "declaration": true,
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "ts-node": {
        "experimentalSpecifierResolution": "node",
        "transpileOnly": true,
        "esm": true
    },
    "include": ["src/**/*"],
    "exclude": ["tests", "node_modules", "examples"]
}
