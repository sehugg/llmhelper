{
  "name": "llmhelper",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "tsc --noEmit",
    "test": "LLM_DEFAULT_MODEL=testing c8 --reporter html node --test --enable-source-maps --loader ts-node/esm $(find tests -name '*.test.ts' ! -name 'benchmarks.test.ts')",
    "test-one": "LLM_DEFAULT_MODEL=testing node --test --enable-source-maps --loader ts-node/esm",
    "test-local": "LLM_DEFAULT_MODEL=local node --test --enable-source-maps --loader ts-node/esm",
    "test-benchmarks": "LLM_DEFAULT_MODEL=testing node --test --enable-source-maps --loader ts-node/esm tests/benchmarks.test.ts",
    "run": "node --enable-source-maps --loader ts-node/esm",
    "prepublishOnly": "npm run build"
  },
  "type": "module",
  "author": "Steven Hugg <hugg@fasterlight.com>",
  "license": "MIT",
  "description": "An adapter for generative text APIs like OpenAI, Gemini, etc.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sehugg/llmhelper"
  },
  "keywords": [
    "llm",
    "openai",
    "gemini",
    "claude",
    "gpt",
    "llama",
    "ollama"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "gpt4-tokenizer": "^1.3.0",
    "ora": "^8.1.0",
    "rand-seed": "^2.1.7",
    "reflect-metadata": "^0.2.2",
    "ts-textrank": "^1.0.3",
    "tslib": "^2.6.3",
    "yaml": "^2.5.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.0",
    "@types/diff": "^7.0.2",
    "@types/express": "^5.0.0",
    "@types/express-ws": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.1.0",
    "c8": "^10.1.2",
    "commander": "^13.1.0",
    "exifreader": "^4.23.7",
    "express": "^5.1.0",
    "express-ws": "^5.0.2",
    "fastest-levenshtein": "^1.0.16",
    "lean-qr": "^2.3.4",
    "phonemify": "^0.0.3",
    "rot-js": "^2.2.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4"
  },
  "optionalDependencies": {
    "openai": "^4.53.2",
    "ollama": "^0.5.6",
    "@anthropic-ai/sdk": "^0.39.0",
    "@google/generative-ai": "^0.24.0",
    "@huggingface/inference": "^3.7.1",
    "@mozilla/readability": "^0.6.0",
    "dockerode": "^4.0.2",
    "@types/dockerode": "^3.3.31",
    "diff": "^7.0.0",
    "better-sqlite3": "^11.2.1",
    "@types/better-sqlite3": "^7.6.11",
    "pdfreader": "^3.0.5",
    "playwright": "^1.46.0",
    "gray-matter": "^4.0.3",
    "rss-parser": "^3.13.0",
    "youtube-transcript": "^1.2.1",
    "wtf_wikipedia": "^10.3.2",
    "sqlite": "^5.1.1",
    "sqlite-vec": "^0.1.7-alpha.2",
    "jsdom": "^26.1.0"
  }
}
